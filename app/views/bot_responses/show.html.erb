<h1>There's a cockroach in your house!</h1>
<div class="responses">
  <p class="response"><%= @bot_response.description %></P>
</div>

<% if @related_choices.empty? && @bot_response.victory == true %>
  <div>
    YOU WON!
  </div>
  <%= link_to "<button>Replay?</button>".html_safe, bot_response_url(id: 1) %>
<% elsif @related_choices.empty? && @bot_response.victory == false %>
  <div>
    YOU LOSE!
  </div>
<% else %>
  <% @related_choices.each do |choice|  %>
    <%= choice.description %>
    <%= link_to "Choose", bot_response_url(id: choice.next_bot_response_id) %><br>
  <% end %>
<% end %>
